<h4 tal:condition="message">${message}</h4>

<ul  i18n:domain="novaideo">
  <tal:loop repeat="amendment amendments">
    <li >
      <div>
        <h4 class="content-title content-title-sm"><a tal:attributes="href request.resource_url(amendment, '@@index')">${amendment.title}</a> (${amendment.state[0].capitalize()})</h4>
        <div class="object-description object-description-sm">
          <small ><span i18n:translate="">(Version amendée par </span><a tal:attributes="href request.resource_url(amendment.author, '@@index')">${((amendment.author is current_user) and 'Vous') or amendment.author.name}</a><span i18n:translate=""> le </span><span tal:replace="layout.to_localized_time(amendment.modified_at, date_only=True)"/><span i18n:translate=""> à </span>${amendment.modified_at.hour}:${amendment.modified_at.minute}:${amendment.modified_at.second} <span tal:omit-tag="" tal:condition="amendment.originalentity is not None">, <span i18n:translate="">dupliquée à partir de la version amendée </span><a tal:attributes="href request.resource_url(amendment.originalentity, '@@index')">${amendment.originalentity.title}</a></span>)
          </small>
         </div>
      </div>
    </li>
  </tal:loop>
</ul>

