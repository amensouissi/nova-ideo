<nav class="navbar navbar-entity" role="navigation">
  <div class="container-fluid">
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" >
      <ul class="nav navbar-nav">
        <tal:loop repeat="a text_actions">
          <li><a tal:attributes="href a.url" class="btn btn-sm"><span class="${getattr(a.action,'style_picto','')}" ></span> ${a.title}</a></li>
        </tal:loop>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <tal:loop repeat="a global_actions">
          <li><a tal:attributes="href a.url" class="btn btn-sm"><span class="${getattr(a.action,'style_picto','')}" ></span> ${a.title}</a></li>
        </tal:loop>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="media-body content-title-body" i18n:domain="novaideo">
  <h3 tal:condition="amendment.state"><span class="label label-basic pull-right">${amendment.state[0].capitalize()}</span></h3>
  <h2 class="content-title">${amendment.title}</h2>
  <div class="object-description">
   <small><span  i18n:translate="">(Version amendée par</span> <a tal:attributes="href request.resource_url(amendment.author, '@@index')">${((amendment.author is current_user) and 'Vous') or getattr(amendment.author, 'title', amendment.author.name)}</a> <span  i18n:translate="">le</span> <span tal:replace="layout.to_localized_time(amendment.modified_at, date_only=True)"/><span  i18n:translate="">à ${amendment.modified_at.hour}:${amendment.modified_at.minute}:${amendment.modified_at.second} de la proposition</span> <a tal:attributes="href request.resource_url(amendment.proposal, '@@index')">${amendment.proposal.title}</a><span tal:omit-tag="" tal:condition="amendment.originalentity is not None"><span  i18n:translate="">, dupliquée à partir de la version amendée </span><a tal:attributes="href request.resource_url(amendment.originalentity, '@@index')">${amendment.originalentity.title}</a></span>)
   </small>
  </div>
</div>
<div class="amendment-diff" i18n:domain="novaideo">
 <div id="diff-container">
  <div class="object-well proposal-well">
    <dl >
        <dt i18n:translate="">Abstract</dt>
	<dd>${structure:descriptiondiff}</dd>
      <dt tal:condition="keywordsdiff" i18n:translate="">Keywords</dt>
      <dd tal:condition="keywordsdiff">
        <tal:loop repeat="k keywordsdiff">
          <a tal:attributes="href request.resource_url(request.root, '', query={'text':k['title']})"><del tal:condition="k['state']=='del'">${k['title']}</del><ins tal:condition="k['state']=='ins'">${k['title']}</ins><span tal:condition="k['state']=='nothing'">${k['title']}</span></a>
            <tal:separator condition="not: repeat['k'].end">, </tal:separator> 
        </tal:loop>
      </dd>
    </dl>
  </div>
  <div id="contenttext" class="content-text">
    ${structure:textdiff}
  </div>
 </div>
</div>

