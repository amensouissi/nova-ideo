<div id="global-actions">
  <div tal:condition="global_actions" class="pull-right global-actions">
        <tal:loop repeat="a global_actions">
          <a tal:attributes="href a.url" class="btn btn-success btn-sm">${a.title}</a>
        </tal:loop>
  </div>
</div>
<div class="media-body content-title-body">
  <h3 tal:condition="amendment.state"><span class="label label-basic pull-right">${amendment.state[0].capitalize()}</span></h3>
  <h2 class="content-title">${amendment.title}</h2>

  <div class="amendment-description">
   <small >(Version amendée par <a tal:attributes="href request.resource_url(amendment.author, '@@index')">${((amendment.author is current_user) and 'Vous') or amendment.author.name}</a> le <span tal:replace="layout.to_localized_time(amendment.modified_at, date_only=True)"/> à ${amendment.modified_at.hour}:${amendment.modified_at.minute}:${amendment.modified_at.second} de la proposition <a tal:attributes="href request.resource_url(amendment.proposal, '@@index')">${amendment.proposal.title}</a>)
   </small>
  </div>
<div class="amendment-diff">
 <div id="diff-container">
  <div class="proposal-well">
    <dl >
        <dt>Résumé</dt>
	<dd>${structure:descriptiondiff}</dd>
      <dt tal:condition="keywordsdiff">Mots clés</dt>
      <dd tal:condition="keywordsdiff">
        <tal:loop repeat="k keywordsdiff">
          <a tal:attributes="href request.resource_url(request.root, '', query={'text':k['title']})"><del tal:condition="k['state']=='del'">${k['title']}</del><ins tal:condition="k['state']=='ins'">${k['title']}</ins><span tal:condition="k['state']=='nothing'">${k['title']}</span></a>
            <tal:separator condition="not: repeat['k'].end">, </tal:separator> 
        </tal:loop>
      </dd>
    </dl>
  </div>
  <div id="contenttext" class="content-text">
    ${structure:textdiff}
  </div>
 </div>
</div>

<div id="text-actions">
  <div tal:condition="text_actions" class="text-actions">
        <tal:loop repeat="a text_actions">
          <a tal:attributes="href a.url" class="btn btn-default btn-sm btn-text-action">${a.title}</a>
        </tal:loop>
  </div>
</div>
