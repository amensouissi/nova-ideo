<div id="global-actions">
  <div tal:condition="global_actions" class="pull-right global-actions">
        <tal:loop repeat="a global_actions">
          <a tal:attributes="href a.url" class="btn btn-success btn-sm">${a.title}</a>
        </tal:loop>
  </div>
</div>
<div class="media-body content-title">
<h3 tal:condition="amendment.state"><span class="label label-primary pull-right">${amendment.state[0].capitalize()}</span></h3>
<h3>${amendment.title}</h3>
</div>
  <div class="jumbotron well amendment-well">
    <dl >
        <dt>Intention</dt>
	<dd>${amendment.intention}</dd>
        <dt>Objet</dt>
	<dd>${amendment.comment}</dd>
        <dt>Idée remplacée</dt>
	<dd>
              <a tal:condition="amendment.replaced_idea is not None" tal:attributes="href request.resource_url(amendment.replaced_idea, '@@index')">${amendment.replaced_idea.title}</a>
              <span tal:condition="amendment.replaced_idea is None"> Non identifiée </span>  
        </dd>
        <dt>Idée de remplacement</dt>
        <dd>
              <a tal:condition="amendment.idea_of_replacement is not None" tal:attributes="href request.resource_url(amendment.idea_of_replacement, '@@index')">${amendment.idea_of_replacement.title}</a>
              <span tal:condition="amendment.idea_of_replacement is None"> Non identifiée </span>
        </dd>
        <dt>Dernière modification</dt>
	<dd>
          <span tal:replace="layout.to_localized_time(amendment.modified_at, date_only=True)"/> à ${amendment.created_at.hour}:${amendment.created_at.minute}:${amendment.created_at.second} par <a tal:attributes="href request.resource_url(amendment.author, '@@index')">${((amendment.author is current_user) and 'Vous') or amendment.author.name}</a>
        </dd>
    </dl>
  </div>

<h3>Les modifications apportées à la proposition (<a tal:attributes="href request.resource_url(amendment.proposal, '@@index')">${amendment.proposal.title}</a>)</h3>
<div id="amendment-diff">
  <div class="jumbotron well diff-well">
    <dl >
        <dt>Résumé</dt>
	<dd>${structure:descriptiondiff}</dd>
      <dt tal:condition="keywordsdiff">Mots clés</dt>
      <dd tal:condition="keywordsdiff">
        <tal:loop repeat="k keywordsdiff">
          <a tal:attributes="href request.resource_url(request.root, '', query={'text':k['title']})"><del tal:condition="k['state']=='del'">${k['title']}</del><ins tal:condition="k['state']=='ins'">${k['title']}</ins><span tal:condition="k['state']=='nothing'">${k['title']}</span></a>
            <tal:separator condition="not: repeat['k'].end">, </tal:separator> 
        </tal:loop>
      </dd>
    </dl>
  </div>
  <div id="contenttext" class="content-text">
    ${structure:textdiff}
  </div>
</div>
<div id="text-actions">
  <div tal:condition="text_actions" class="text-actions">
        <tal:loop repeat="a text_actions">
          <a tal:attributes="href a.url" class="btn btn-default btn-sm btn-text-action">${a.title}</a>
        </tal:loop>
  </div>
</div>
