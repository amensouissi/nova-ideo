<div tal:condition="amendment is not None" >
    <h3><a tal:attributes="href request.resource_url(amendment, '@@index')">${amendment.title}</a></h3>
    <div class="scroll-able amendment-trimmed-text">
      ${structure:text}
    </div>
    <div class="scroll-able amendment-intention">
        <span tal:condition="is_proposal" style="color: red;">(Texte d'origine)</span>
        <dl  tal:condition="not is_proposal">
        <dt>Intention</dt>
	<dd>${getattr(amendment, 'intention', 'Not specified')}</dd>
        <dt>Objet</dt>
	<dd>${getattr(amendment, 'comment', 'Not specified')}</dd>
        <div tal:omit-tag="" tal:condition="amendment.replaced_idea">
           <dt >Idées remplacée</dt>
	   <dd >
             <a  tal:attributes="href request.resource_url(amendment.replaced_idea, '@@index')">${ri.title}</a>
           </dd>
        </div>
        <div tal:omit-tag="" tal:condition="amendment.idea_of_replacement">
          <dt >Idée de remplacement</dt>
          <dd>
             <a  tal:attributes="href request.resource_url(amendment.idea_of_replacement, '@@index')">${ri.title}</a>
          </dd>
        </div>
        </dl>
   </div>
</div>

