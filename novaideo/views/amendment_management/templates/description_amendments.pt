<div tal:condition="amendment is not None" >
    <h3><a tal:attributes="href request.resource_url(amendment, '@@index')">${amendment.title}</a></h3>
    <div class="scroll-able amendment-trimmed-text">
      ${structure:text}
    </div>
    <div class="scroll-able amendment-intention">
        <span tal:condition="is_proposal" style="color: red;">(Texte d'origine)</span>
        <dl  tal:condition="not is_proposal">
            <dt>Intention</dt>
	    <dd>${amendment.intention}</dd>
            <dt>Objectif</dt>
	    <dd>${amendment.comment}</dd>
            <dt>Idées remplacées</dt>
	    <dd>
             <tal:loop repeat="ri amendment.replaced_ideas">
                <a  tal:attributes="href request.resource_url(ri, '@@index')">${ri.title}</a>
                <tal:separator condition="not: repeat['ri'].end">, </tal:separator>
              </tal:loop> 
              <span tal:condition="len(amendment.replaced_ideas) == 0"> Non identifiée </span>  
            </dd>
            <dt>Idées de remplacement</dt>
	    <dd>
              <tal:loop repeat="ri amendment.ideas_of_replacement">
                <a  tal:attributes="href request.resource_url(ri, '@@index')">${ri.title}</a>
                <tal:separator condition="not: repeat['ri'].end">, </tal:separator>
              </tal:loop> 
              <span tal:condition="len(amendment.ideas_of_replacement) == 0"> Non identifiée </span>  
            </dd>
        </dl>
   </div>
</div>

