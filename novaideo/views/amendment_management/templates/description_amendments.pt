<div tal:condition="amendment is not None" >
    <h3><a tal:attributes="href request.resource_url(amendment, '@@index')">${amendment.title}</a></h3>
    <div class="scroll-able amendment-trimmed-text">
      ${structure:text}
    </div>
    <div class="scroll-able amendment-intention">
        <span tal:condition="is_proposal" style="color: red;">(Texte d'origine)</span>
        <dl  tal:condition="not is_proposal">
            <dt>Intention</dt>
	    <dd>${amendment.intention}</dd>
            <dt>Objectif</dt>
	    <dd>${amendment.comment}</dd>
            <dt>Idée remplacée</dt>
	    <dd>
              <a tal:condition="amendment.replaced_idea is not None" tal:attributes="href request.resource_url(amendment.replaced_idea, '@@index')">${amendment.replaced_idea.title}</a>
              <span tal:condition="amendment.replaced_idea is None"> Non identifiée </span>  
            </dd>
            <dt>Idée de remplacement</dt>
	    <dd>
              <a tal:condition="amendment.idea_of_replacement is not None" tal:attributes="href request.resource_url(amendment.idea_of_replacement, '@@index')">${amendment.idea_of_replacement.title}</a>
              <span tal:condition="amendment.idea_of_replacement is None"> Non identifiée </span>
            </dd>
        </dl>
   </div>
</div>

