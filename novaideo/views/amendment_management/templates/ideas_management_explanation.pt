<div id="panel-controllableitems" class="panel-group">
  <div tal:omit-tag="" tal:condition="old_items"> 
   <h3>Idées gardées</h3>
   <div tal:repeat="item old_items" class="panel controllable-item">
	 <div class="panel-heading" data-id="${item['id']}" data-title="${item['idea'].title}">
	   <a  href="#panel-element-${item['id']}" data-parent="#panel-controllableitems" data-toggle="collapse" class="panel-title">
              <span class="glyphicon glyphicon-plus"> </span>  ${item['idea'].title}
	   </a>
           <div id="old-items" class="explanation-container" ></div>
	 </div>
	 <div class="panel-collapse collapse" id="panel-element-${item['id']}" style="height: auto;">
           <div class="panel-body">
             ${structure:item['body']}
	   </div>
	 </div>
     </div>
  </div>
  <div tal:omit-tag="" tal:condition="deleted_items"> 
   <h3 style="color: #ef827d">Idées supprimées</h3>
   <div tal:repeat="item deleted_items" class="panel controllable-item">
	 <div class="panel-heading" data-id="${item['id']}" data-title="${item['idea'].title}">
	   <a  href="#panel-element-${item['id']}" data-parent="#panel-controllableitems" data-toggle="collapse" class="panel-title">
              <span class="glyphicon glyphicon-plus"> </span>  ${item['idea'].title}
	   </a>
           <div id="deleted-items" class="explanation-container" ></div>
	 </div>
	 <div class="panel-collapse collapse" id="panel-element-${item['id']}" style="height: auto;">
           <div class="panel-body">
             ${structure:item['body']}
	   </div>
	 </div>
     </div>
  </div>

  <div tal:omit-tag="" tal:condition="added_items"> 
   <h3 style="color: #89e189">Idées ajoutées</h3>
   <div tal:repeat="item added_items" class="panel controllable-item">
	 <div class="panel-heading" data-id="${item['id']}" data-title="${item['idea'].title}">
	   <a  href="#panel-element-${item['id']}" data-parent="#panel-controllableitems" data-toggle="collapse" class="panel-title">
              <span class="glyphicon glyphicon-plus"> </span>  ${item['idea'].title}
	   </a>
          <div id="added-items" class="explanation-container" ></div>
	 </div>
	 <div class="panel-collapse collapse" id="panel-element-${item['id']}" style="height: auto;">
           <div class="panel-body">
             ${structure:item['body']}
             
	   </div>
	 </div>
     </div>
  </div>

 </div>


