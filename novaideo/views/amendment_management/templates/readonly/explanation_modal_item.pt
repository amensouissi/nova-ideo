<div class="modal fade" id="${item['oid']}explanation_modal" i18n:domain="novaideo">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <h4 class="modal-title"><span class="glyphicon glyphicon-comment"></span> <span  i18n:translate="">The intention of changes</span> (${item['oid']})</h4>
      </div>
      <div class="modal-body">
      <dl >
        <dt i18n:translate="">Justification</dt>
	<dd>${structure:data['comment']}</dd>
        <div tal:omit-tag="" tal:condition="data['edited_ideas']">
          <dt i18n:translate="">Edited ideas</dt>
	  <dd>
            <tal:loop repeat="idea data['edited_ideas']">
               <a tal:attributes="href request.resource_url(idea, '@@index')">${idea.title}</a>
               <tal:separator condition="not: repeat['idea'].end">, </tal:separator>
            </tal:loop>
          </dd>
        </div>
        <div tal:omit-tag="" tal:condition="data['added_ideas']">
          <dt i18n:translate="">Added ideas</dt>
	  <dd>
            <tal:loop repeat="idea data['added_ideas']">
               <a tal:attributes="href request.resource_url(idea, '@@index')">${idea.title}</a>
               <tal:separator condition="not: repeat['idea'].end">, </tal:separator>
            </tal:loop>
          </dd>
        </div>
        <div tal:omit-tag="" tal:condition="data['removed_ideas']">
          <dt i18n:translate="">Removed ideas</dt>
	  <dd>
            <tal:loop repeat="idea data['removed_ideas']">
               <a tal:attributes="href request.resource_url(idea, '@@index')">${idea.title}</a>
               <tal:separator condition="not: repeat['idea'].end">, </tal:separator>
            </tal:loop>
          </dd>
        </div>
      </dl>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>
