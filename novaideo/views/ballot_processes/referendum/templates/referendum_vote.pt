<div class="object-well idea-well" i18n:domain="novaideo"> 
  <dl >
     <dt  i18n:translate="">Sujet du vote</dt>
     <dd><div class="alert alert-warning">${ballot_report.description}</div></dd>
     <div tal:omit-tag="" tal:condition="ballot_report is not None">
       <dt tal:condition="ballot_report.electors"  i18n:translate="">Electeurs</dt>
       <dd tal:condition="ballot_report.electors">
         <tal:loop repeat="e ballot_report.electors">
           <a tal:attributes="href request.resource_url(e, '@@index')">${e.name}</a>
           <tal:separator condition="not: repeat['e'].end">, </tal:separator> 
         </tal:loop>
       </dd>
       <dt tal:condition="ballot_report.voters" i18n:translate="">Votants</dt>
       <dd tal:condition="ballot_report.voters">
         <tal:loop repeat="e ballot_report.voters">
             ${e.name}
             <tal:separator condition="not: repeat['e'].end">, </tal:separator> 
         </tal:loop>
       </dd>
       <dt i18n:translate="">Durée</dt>
       <dd tal:define="run ballot_report.ballot.run_at; finish  ballot_report.ballot.finished_at" i18n:translate="">
          le vote à commencé le <span tal:replace="layout.to_localized_time(run, date_only=True)"/> à ${run.hour}:${run.minute}:${run.second}. <span tal:condition="finish is not None">La fin du vote est prévue pour le <span tal:replace="layout.to_localized_time(finish, date_only=True)"/> à ${finish.hour}:${finish.minute}:${finish.second}.</span>
       </dd>
     </div>
 </dl>
</div>


