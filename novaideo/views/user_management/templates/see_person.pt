<div class="thumbnail right-caption span4" >
  <img tal:condition="user.picture is not None" tal:attributes="src user.picture.url(request)"  width="100"/>
  <img tal:condition="user.picture is None" tal:attributes="src 'http://www.websco.fr/images/slides/User-green-icon.png'" width="100"/>
  <div class="media-body" style="width:auto;">
    <h3 tal:condition="getattr(user, 'state', None) is not None"><span class="label label-primary pull-right">${user.state[0].capitalize()}</span></h3>
      <h3>${user.name}</h3>
      <dl>
        <dt tal:condition="getattr(user, 'keywords', [])">Centres d'intérêt</dt>
        <dd tal:condition="getattr(user, 'keywords', [])">
          <tal:loop repeat="k user.keywords">
            <a tal:attributes="href request.resource_url(request.root, '', query={'text':k})">${k}</a>
            <tal:separator condition="not: repeat['k'].end">, </tal:separator> 
          </tal:loop>
        </dd>
      </dl>
      <span class="date" i18n:translate="">
        Member since <span tal:replace="layout.to_localized_time(user.modified_at, date_only=True)" i18n:name="date"/>
      </span>
  </div>
</div>

<div id="person_actions">
  <div tal:condition="actions" class="btn-group btn-group-justified">
        <tal:loop repeat="a actions">
          <a tal:attributes="href a['url']" class="btn btn-default">${a['title']}</a>
        </tal:loop>
  </div>

</div>

<div id="panel-contributions" class="panel-group">
  <div tal:condition="contents" class="panel panel-default">
    <div class="panel-heading">
      <a  href="#contents" data-parent="#contributions" data-toggle="collapse" class="panel-title collapsed">
	Contents
      </a>
    </div>
    <div class="panel-collapse collapse" id="contents" style="height: 0px;">
	<div  class="panel-body">
	    ${structure:contents}
	</div>
    </div>
  </div>
</div>
