<div class="row"  i18n:domain="novaideo">
    <div class="col-md-2"></div>
	<div class="col-md-7">
		<div class="deadline-panel ${expired and 'alert-danger' or 'alert-warning'}">
		   <strong tal:condition="expired" i18n:translate="">Deadline expired:</strong>
       <strong tal:condition="not expired" i18n:translate="">Deadline:</strong>
		   <span class="pull-right">Du <strong tal:content="layout.to_localized_time(previous_deadline, date_only=True)"/> au <strong tal:content="layout.to_localized_time(current_deadline, date_only=True)"/></span>
           <div class="progress progress-striped">
             <div class="progress-bar ${expired and 'progress-bar-danger' or 'progress-bar-warning'} " role="progressbar" aria-valuenow="${percent}" aria-valuemin="0" aria-valuemax="100" style="width: ${percent}%;">
                <span class="sr-only">${percent}% Complete</span>
             </div>
           </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</div>