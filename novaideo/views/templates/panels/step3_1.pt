<div class="proposal-members-nb" i18n:domain="novaideo">
   <span class="glyphicon glyphicons-group"></span> ${len(context.working_group.members)} <span  i18n:translate="">participants</span>
      (<tal:loop repeat="state working_group_states">
         ${state}
         <tal:separator condition="not: repeat['state'].end">, </tal:separator>
      </tal:loop>)
    <br>
   <span tal:condition="duration is not None"  style="color:#d9534f;">
       <span class="glyphicon glyphicon-time"></span>
       <span tal:omit-tag="" tal:condition="duration[0]>0">${duration[0]} <span i18n:translate="">day(s)</span></span>
       <span tal:omit-tag="" tal:condition="duration[1]>0"> ${duration[1]} <span i18n:translate="">hour(s)</span></span>
       <span tal:omit-tag="" tal:condition="duration[2]>0"> ${duration[2]} <span i18n:translate="">minute(s)</span></span>
       <span tal:omit-tag="" tal:condition="duration[0] == 0 and duration[1] == 0 and duration[3]>0"> ${duration[3]} <span i18n:translate="">second(s)</span></span>
   </span>
   <span tal:condition="duration is None" style="color:#d9534f;" i18n:translate="">Period expired</span>
</div>

<div class="nb-iteration">${getattr(process, 'iteration', 1)}</div>

<div class="sub-steps" i18n:domain="novaideo">
  	  <ul>
    	    <li class="step sub-step-1 ${( 'votes for publishing' not in context.state) and 'off'}">
      	      <span class="step-content">
                  <div class="step-text" i18n:translate="">
                     Votes for publishing
                  </div>
              </span>
            </li>
            <li class="step sub-step-2 ${( 'proofreading' not in context.state) and 'off'}">
      	      <span class="step-content">
                 <div class="step-text" i18n:translate="">
                   Correction of the proposal
                 </div>
              </span>
            </li>
            <li class="step sub-step-3 ${( 'amendable' not in context.state) and 'off'}">
      	       <span data-step="message-step-3" class="step-content">
                 <div class="step-text" i18n:translate="">
                   Proposal improvement
                 </div>
               </span>
            </li>
            <li class="step sub-step-4 ${( 'votes for amendments' not in context.state) and 'off'} ">
      	       <span class="step-content">
                 <div class="step-text" i18n:translate="">
                   Votes for amendments
                 </div>
               </span>
            </li>
          </ul>
      </div>
