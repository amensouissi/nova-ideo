<html xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="substanced"
      tal:define="mp request.sdiapi.mgmt_path;"
      tal:omit-tag="">

    <a class="brand" href="/"><img alt="Nova-Ideo" src="${request.static_url('novaideo:static/images/novaideo32.png')}" class="globe-logo"> Nova-Ideo</a>

    <div class="nav navbar-nav navbar-right" tal:condition="request.user">
      <button type="button" class="btn btn-primary pull-right dropdown-toggle"
              data-toggle="dropdown">
        <i class="glyphicon glyphicon-user" style="margin-right: 5px;"></i>${request.user.__name__}<span class="caret" style="margin-left: 8px;"></span>
      </button>

      <ul class="dropdown-menu pull-right" role="menu">
        <li class="account-link">
          <a href="${mp(request.user, '')}" i18n:translate="">
            <i i18n:name="icon" class="glyphicon glyphicon-pencil"></i> Account</a>
        </li>
        <li class="logout-link">
          <a href="${request.resource_url(request.root, '@@logout')}" i18n:translate="">
            <i i18n:name="icon" class="glyphicon glyphicon-off"></i> Log Out</a>
        </li>
      </ul>
    </div>
    <div id="searchform" class="col-lg-3 navbar-form navbar-right">
     ${structure:search_body}
    </div>
    <div class="navbar-right">
      <div class="switchchoice">
        <input name="globalmenu" type="checkbox" checked data-label-text="Menu"  data-on-color="success" data-off-color="danger" data-size="small"  data-on-text="<span class='glyphicon glyphicon-tasks'></span>" data-off-text="<span class='glyphicon glyphicon-off'></span>" >

        <script type="text/javascript">$(document).ready(function(){$("[name='globalmenu']").bootstrapSwitch();})</script>
      </div>
    </div>
    <div tal:condition="request.user is None" class="btn-group pull-right">  
       <a href="${request.resource_url(request.root, '@@login')}" class="btn btn-primary ">
          <i class="glyphicon glyphicon-log-in"> </i> Log In
       </a>
       <a href="${request.resource_url(request.root, '@@registration')}" class="btn btn-primary ">
          <i class="glyphicon glyphicon-pencil"> </i> Registration
       </a>
    </div>

</html>


