<div class="proposal-members-nb" i18n:domain="novaideo">
   <span class="glyphicon glyphicons-group"></span> ${len(context.working_group.members)} <span  i18n:translate="">participants</span> (${', '.join([s.capitalize() for s in context.working_group.state])})<br>
   <span tal:condition="duration is not None"  style="color:#d9534f;">
       <span class="glyphicon glyphicon-time"></span>
       <span tal:omit-tag="" tal:condition="duration[0]>0">${duration[0]} <span i18n:translate="">day(s)</span></span>
       <span tal:omit-tag="" tal:condition="duration[1]>0"> ${duration[1]} <span i18n:translate="">hour(s)</span></span>
       <span tal:omit-tag="" tal:condition="duration[2]>0"> ${duration[2]} <span i18n:translate="">minute(s)</span></span></span>
</div>

<div class="object-well idea-well" i18n:domain="novaideo">  
<dl >
     <div tal:omit-tag="" tal:condition="ballot_report is not None">
       <dt tal:condition="ballot_report.electors" i18n:translate="">Electors</dt>
       <dd tal:condition="ballot_report.electors">
         <tal:loop repeat="e ballot_report.electors">
           <a tal:attributes="href request.resource_url(e, '@@index')">${e.name}</a>
           <tal:separator condition="not: repeat['e'].end">, </tal:separator> 
         </tal:loop>
       </dd>
       <dt tal:condition="ballot_report.voters"><span i18n:translate="">Voters</span> <span style="color:#d9534f;">(${len(ballot_report.voters)}/${len(ballot_report.electors)})</span></dt>
       <dd tal:condition="ballot_report.voters">
         <tal:loop repeat="e ballot_report.voters">
             ${e.name}
             <tal:separator condition="not: repeat['e'].end">, </tal:separator> 
         </tal:loop>
       </dd>
     </div>
 </dl>
</div>

<div class="nb-iteration">${getattr(process, 'iteration', 1)}</div>

<div class="sub-steps" i18n:domain="novaideo">
  	  <ul>
    	    <li class="step sub-step-1 ${( 'votes for publishing' not in context.state) and 'off'}">
      	      <span class="step-content">
                  <div class="step-text" i18n:translate="">
                     Votes for publishing
                  </div>
              </span>
            </li>
            <li class="step sub-step-2 ${( 'proofreading' not in context.state) and 'off'}">
      	      <span class="step-content">
                 <div class="step-text" i18n:translate="">
                   Correction of the proposal
                 </div>
              </span>
            </li>
            <li class="step sub-step-3 ${( 'amendable' not in context.state) and 'off'}">
      	       <span data-step="message-step-3" class="step-content">
                 <div class="step-text" i18n:translate="">
                   Proposal improvement
                 </div>
               </span>
            </li>
            <li class="step sub-step-4 ${( 'votes for amendments' not in context.state) and 'off'} ">
      	       <span class="step-content">
                 <div class="step-text" i18n:translate="">
                   Votes for amendments
                 </div>
               </span>
            </li>
          </ul>
      </div>
