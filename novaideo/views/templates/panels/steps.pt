<div tal:condition="condition" class="steps-container"  i18n:domain="novaideo">
	<div class="steps">
  	  <ul>
    	    <li class="step step-1 no-message ${(current_step == 1)  and 'current-step'}">
      	      <span class="step-content"><div class="step-text"><strong i18n:translate="" >Recueil de l'idée</strong></div></span>
            </li>
            <li class="step step-2 no-message ${(current_step == 2)  and 'current-step'}">
      	      <span class="step-content"><div class="step-text"><strong i18n:translate="" >Rédaction de la proposition</strong></div></span>
            </li>
            <li class="step step-3 ${(current_step == 3)  and 'current-step'}">
      	       <span class="step-content">
                 <div class="step-text">
                   <strong i18n:translate="" >Amélioration de la proposition</strong>
                   <br />${structure:step3_message}
                 </div>
               </span>
            </li>
            <li class="step step-4 ${(current_step == 4)  and 'current-step'}">
      	       <span class="step-content">
                 <div class="step-text">
                   <strong i18n:translate="" >Soutien de la proposition</strong>
                   <br />${structure:step4_message}
                 </div>
               </span>
            </li>
          </ul>
      </div>
</div>

