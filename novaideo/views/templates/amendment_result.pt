<div class="thumbnail right-caption span4 search-item" >
  <div id="amendment-image" class="content-image">

  </div>
  <div class="media-body">
    <h3 tal:condition="object.state"><span class="label label-basic pull-right">${object.state[0].capitalize()}</span></h3>
    <a tal:attributes="href request.resource_url(object, '@@index')"><h3>${object.title} </h3></a>
    <dl >
        <dt>Proposé le</dt>
	<dd>
          <span tal:replace="layout.to_localized_time(object.modified_at, date_only=True)"/> à ${object.modified_at.hour}:${object.modified_at.minute}:${object.modified_at.second} par <a tal:attributes="href request.resource_url(object.author, '@@index')">${((object.author is current_user) and 'Vous') or object.author.name}</a>
        </dd>
    </dl>
    <div tal:omit-tag="" tal:on-error="nothing">
      <a  tal:condition="action is not None" tal:attributes="href action.url" class="btn btn-default btn-xs pull-right edit-amendment-action">
          <span class="glyphicon glyphicon-pencil"></span> ${action.title}
      </a>
    </div>
  </div>
</div>
