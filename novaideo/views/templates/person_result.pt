<div class="thumbnail right-caption span4 search-item" >
  <img tal:condition="object.picture is not None" tal:attributes="src object.picture.url(request)"  width="100"/>
  <div tal:condition="object.picture is None" id="person-image" class="content-image">
  </div>
  <div class="media-body" style="width:auto;">
    <h4 tal:condition="getattr(object, 'state', None) is not None"><span class="label label-primary pull-right">${object.state[0].capitalize()}</span></h4>
      <a tal:attributes="href request.resource_url(object, '@@index')"><h3>${((object is current_user) and 'Vous') or object.name} </h3></a>
      <dl>
        <dt tal:condition="getattr(object, 'keywords', [])">Centres d'intérêt</dt>
        <dd tal:condition="getattr(object, 'keywords', [])">
          <tal:loop repeat="k object.keywords">
            <a tal:attributes="href request.resource_url(request.root, '', query={'text':k})">${k}</a>
            <tal:separator condition="not: repeat['k'].end">, </tal:separator> 
          </tal:loop>
        </dd>
      </dl>
      <span class="date" i18n:translate="">
        Member since <span tal:replace="layout.to_localized_time(object.modified_at, date_only=True)" i18n:name="date"/>
      </span>
  </div>
</div>
