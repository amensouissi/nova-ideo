<div class="thumbnail right-caption span4 search-item" >
  <div id="idea-image" class="content-image">
  <img src="${request.static_url('novaideo:static/images/idea.png')}" width="100">
  </div>
  <div class="media-body">
    <h4 tal:condition="object.state"><span class="label label-basic pull-right">${object.state[0].capitalize()}</span></h4>
    <a tal:attributes="href request.resource_url(object, '@@index')"><h3>${object.title} </h3></a>
    <dl >
      <dt>Résumé</dt><dd>${object.description}</dd>
      <dt tal:condition="object.keywords">Mots clés</dt>
      <dd tal:condition="object.keywords">
        <tal:loop repeat="k object.keywords">
          <a tal:attributes="href request.resource_url(request.root, '', query={'text':k})">${k}</a>
            <tal:separator condition="not: repeat['k'].end">, </tal:separator> 
        </tal:loop>
      </dd>
    </dl>
    Modifiée le <span tal:replace="layout.to_localized_time(object.modified_at, date_only=True)"/> à ${object.modified_at.hour}:${object.modified_at.minute}:${object.modified_at.second} par <a tal:attributes="href request.resource_url(object.author, '@@index')">${((object.author is current_user) and 'Vous') or object.author.name}</a>
  </div>
</div>
