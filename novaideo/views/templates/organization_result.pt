<div class="thumbnail right-caption span4 search-item result-item"  i18n:domain="novaideo"
  tal:define="url request.resource_url(object, '@@index');
                 icon getattr(object, 'icon');
                 picture object.logo;">
  <a class="hidden-xs content-user-img" tal:condition="picture is not None" href="${url}">
     <img class="img-thumbnail" tal:attributes="src picture.url"  width="100"/>
  </a>

  <div tal:condition="picture is None" id="person-image" class="content-image">
    <a href="${url}"><span class="hidden-xs icon ${icon}"></span></a>
  </div>
  <div class="media-body">
    <a tal:attributes="href request.resource_url(object, '@@index')"><h4><span class="visible-xs-inline-block icon ${icon}"></span> ${object.title} </h4></a>
    <p class="text-muted" tal:condition="object.description">
             <small  >${object.description}</small>
    </p>
    <dl tal:define="managers object.managers">
      <dt tal:condition="managers and len(managers)>1"  i18n:translate="">Managers</dt>
      <dt tal:condition="managers and len(managers)==1"  i18n:translate="">The manager</dt>
      <dd tal:condition="managers">
        <tal:loop repeat="member managers">
          <a tal:attributes="href request.resource_url(member, '@@index')">${member.title}</a>
            <tal:separator condition="not: repeat['member'].end">, </tal:separator> 
        </tal:loop>
      </dd>
    </dl>
  </div>
</div>
