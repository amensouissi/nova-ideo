<div class="thumbnail right-caption span4 search-item result-item"  i18n:domain="creationculturelle"
  tal:define="icon getattr(object, 'icon', '');
   url request.resource_url(object, '@@index')">
  <div class="media-body media-file">
    <a tal:condition="state" href="${url}">
      <h4><span class="label label-basic pull-right" i18n:translate="" tal:content="state"/></h4>
    </a>
    <div class="object-title-block" >
      <a tal:attributes="href url">
        <h4>
          <span class="icon ${icon}"></span>  ${object.title}
        </h4>
      </a>
    </div>
    <div class="object-menu pull-right">
      <div tal:replace="structure menu_body"/>
    </div>
    <div class="heterogeneous-content article-content">
      ${object.presentation_text(400)}
    </div>
    <div class="search-item-footer">
      <div class="actions-block">
        <div tal:replace="structure footer_body"/>
      </div>
    </div>
    <div class="actions-footer-container" style="display: none;">
      <div class="container-body">
      </div>
    </div>
  </div>
</div>
