<div tal:define="icon getattr(object, 'icon')">
  <div tal:define="subject object.subjects[0]">
    <h5><span class="icon ${icon}"></span> <span tal:replace="layout.to_localized_time(object.modified_at)"/> (UTC)</h5>
    <span>Une personne a répondu à votre commentaire concernant la contribution <a href="${request.resource_url(subject, '@@index')}"><span class="${getattr(subject, 'icon')}"></span> ${subject.title}</a></span>
  </div>
</div>
