<div i18n:domain="novaideo"
     tal:condition="object.subjects"
     tal:define="support_kind getattr(object, 'support_kind', '')">
  <div tal:define="subject object.subjects[0]">
    <h4>
    	<span tal:condition="support_kind == 'support'" class="alert-token token octicon octicon-triangle-up"></span> 
      <span tal:condition="support_kind == 'oppose'" class="alert-token token octicon octicon-triangle-down"></span> 
      <span tal:condition="support_kind == 'withdraw'" class="alert-token token glyphicon glyphicon-remove"></span>  
        <span tal:replace="layout.to_localized_time(object.modified_at)"/> (UTC)
    </h4>
    <span>
      <span tal:condition="support_kind == 'support'">Une personne a soutenu votre contribution</span> 
	    <span tal:condition="support_kind == 'oppose'">Une personne s'est opposé à votre contribution</span> 
	    <span tal:condition="support_kind == 'withdraw'">Une personne a retiré son jeton de votre contribution</span> 
       <a href="${request.resource_url(subject, '@@index')}"><span class="${getattr(subject, 'icon')}"></span> ${subject.title}</a>.
     </span>
  </div>
</div>
