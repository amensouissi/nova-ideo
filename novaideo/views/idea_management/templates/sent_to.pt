<div tal:omit-tag="" tal:define="memberslen len(members)">
  <div tal:condition="memberslen==0">
    L'idée n'est pas communiquée!
  </div>

  <div tal:condition="memberslen>=1">
    <h3 tal:condition="memberslen>1">Voir les ${memberslen} personnes contactées</h3> 
    <h3 tal:condition="memberslen==1">Voir la personne contactée</h3> 
    L'idée a été envoyée à: <tal:loop repeat="m members">
                            <a tal:condition="not isinstance(m, basestring)" tal:attributes="href request.resource_url(m, '@index')">${m.name}</a>
                            <span tal:condition="isinstance(m, basestring)">${m}</span>
                            <tal:separator condition="not: repeat['m'].end">, </tal:separator> 
                          </tal:loop>
  </div>
</div>
