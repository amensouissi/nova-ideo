<nav class="navbar navbar-entity" role="navigation">
  <div class="container-fluid">
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" >
      <ul class="nav navbar-nav">
        <tal:loop repeat="a text_actions">
          <li><a tal:attributes="href a.url" class="btn btn-sm"><span class="${getattr(a.action,'style_picto','')}" ></span> ${a.title}</a></li>
        </tal:loop>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <tal:loop repeat="a global_actions">
          <li><a tal:attributes="href a.url" class="btn btn-sm"><span class="${getattr(a.action,'style_picto','')}" ></span> ${a.title}</a></li>
        </tal:loop>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="media-body content-title-body">
<h3 tal:condition="idea.state"><span class="label label-basic pull-right">${idea.state[0].capitalize()}</span></h3>
<h2 class="content-title"><img src="${request.static_url('novaideo:static/images/idea_picto32.png')}"> ${idea.title}</h2>
  <div class="object-description">
   <small >(Proposée par <a tal:attributes="href request.resource_url(idea.author, '@@index')">${((idea.author is current_user) and 'Vous') or idea.author.name}</a> le <span tal:replace="layout.to_localized_time(idea.modified_at, date_only=True)"/> à ${idea.modified_at.hour}:${idea.modified_at.minute}:${idea.modified_at.second} <span tal:omit-tag="" tal:condition="idea.originalentity is not None">dupliquée à partir de l'idée <a tal:attributes="href request.resource_url(idea.originalentity, '@@index')">${idea.originalentity.title}</a></span>)
   </small>
  </div>
</div>

<div class="object-well idea-well">
    <dl >
        <dt>Résumé</dt>
	<dd>${idea.description}</dd>
      <dt tal:condition="idea.keywords">Mots clés</dt>
      <dd tal:condition="idea.keywords">
        <tal:loop repeat="k idea.keywords">
          <a tal:attributes="href request.resource_url(request.root, '', query={'text':k})">${k}</a>
            <tal:separator condition="not: repeat['k'].end">, </tal:separator> 
        </tal:loop>
      </dd>
    </dl>
</div>
<div id="contenttext" class="content-text">
${structure:idea.text}
</div>
<div id="idea_files">
<small>
 <blockquote class="attached_files">
   <dl >
   <dt tal:condition="len(files)>1">Pièces jointes:</dt><dt tal:condition="len(files)==1">Pièce jointe:</dt>
   <dd tal:condition="files">
        <tal:loop repeat="f files">
          <a tal:attributes="href f['url']">${f['title']}</a>
            <tal:separator condition="not: repeat['f'].end">, </tal:separator> 
        </tal:loop>
   </dd>
 </blockquote>
</small>
</div>

