<div class="media-body">
<h3 tal:condition="idea.state"><span class="label label-primary pull-right">${idea.state[0].capitalize()}</span></h3>
<h3>${idea.title}</h3>
</div>

<div class="jumbotron well">
    <dl >
        <dt>Résumé</dt>
	<dd>${idea.description}</dd>
      <dt tal:condition="idea.keywords">Mots clés</dt>
      <dd tal:condition="idea.keywords">
        <tal:loop repeat="k idea.keywords">
          <a tal:attributes="href request.resource_url(request.root, '', query={'text':k})">${k}</a>
            <tal:separator condition="not: repeat['k'].end">, </tal:separator> 
        </tal:loop>
      </dd>
        <dt>Dernière modification</dt>
	<dd>
          <span tal:replace="layout.to_localized_time(idea.modified_at, date_only=True)"/> à ${idea.created_at.hour}:${idea.created_at.minute}:${idea.created_at.second} par <a tal:attributes="href request.resource_url(idea.author, '@@index')">${((idea.author is current_user) and 'Vous') or idea.author.name}</a>
        </dd>
    </dl>
</div>
<div id="ideatext">
${structure:idea.text}
</div>
<div id="idea_files">
<small>
 <blockquote class="attached_files">
   <dl >
   <dt tal:condition="len(files)>1">Pièces jointes:</dt><dt tal:condition="len(files)==1">Pièce jointe:</dt>
   <dd tal:condition="files">
        <tal:loop repeat="f files">
          <a tal:attributes="href f['url']">${f['title']}</a>
            <tal:separator condition="not: repeat['f'].end">, </tal:separator> 
        </tal:loop>
   </dd>
 </blockquote>
</small>
</div>

<div id="idea_actions">
  <div tal:condition="actions" class="btn-group btn-group-justified">
        <tal:loop repeat="a actions">
          <a tal:attributes="href a['url']" class="btn btn-default">${a['title']}</a>
        </tal:loop>
  </div>

</div>
