<div id="global-actions">
  <div tal:condition="global_actions" class="pull-right global-actions">
        <tal:loop repeat="a global_actions">
          <a tal:attributes="href a.url" class="btn btn-success btn-sm">${a.title}</a>
        </tal:loop>
  </div>
</div>
<div class="media-body content-title">
  <h3 tal:condition="proposal.state"><span class="label label-primary pull-right">${proposal.state[0].capitalize()}</span></h3>
  <h3>${proposal.title}</h3>
</div>

<div class="jumbotron well proposal-well">
  <div tal:condition="'published' in proposal.state" class="proposal-support pull-right">
    <span class="label label-success">
        <span class="glyphicon glyphicon-thumbs-up"></span>
        <span class="support-nb">${len(proposal.tokens_support)}</span>
    </span>
    <span class="label label-danger">
        <span class="glyphicon glyphicon-thumbs-down"></span>
        <span class="support-nb">${len(proposal.tokens_opposition)}</span>
    </span>
  </div>
    <dl >
        <dt>Résumé</dt>
	<dd>${proposal.description}</dd>
      <dt tal:condition="proposal.keywords">Mots clés</dt>
      <dd tal:condition="proposal.keywords">
        <tal:loop repeat="k proposal.keywords">
          <a tal:attributes="href request.resource_url(request.root, '', query={'text':k})">${k}</a>
            <tal:separator condition="not: repeat['k'].end">, </tal:separator> 
        </tal:loop>
      </dd>
        <dt>Proposée le </dt>
	<dd>
          <span tal:replace="layout.to_localized_time(proposal.created_at, date_only=True)"/> à ${proposal.created_at.hour}:${proposal.created_at.minute}:${proposal.created_at.second} par <a tal:attributes="href request.resource_url(proposal.author, '@@index')">${((proposal.author is current_user) and 'Vous') or proposal.author.name}</a>
        </dd>
        <div tal:omit-tag="" tal:condition="proposal.originalentity is not None">
          <dt>Proposition d'originie</dt>
	  <dd>
             <a tal:attributes="href request.resource_url(proposal.originalentity, '@@index')">${proposal.originalentity.title}</a>
          </dd>
        </div>
        <div tal:omit-tag="" tal:condition="proposal.working_group is not None">
          <dt>Groupe de travail</dt>
	  <dd>
            <tal:loop repeat="m proposal.working_group.members">
              <a tal:attributes="href request.resource_url(m, '@@index')">${m.name}</a>
                <tal:separator condition="not: repeat['m'].end">, </tal:separator> 
           </tal:loop>
          </dd>
          <dd>
            <div id="wg-actions">
               <div tal:condition="wg_actions" class="btn-group wg-actions">
                    <tal:loop repeat="a wg_actions">
                      <a tal:attributes="href a.url" class="btn btn-primary btn-xs btn-wg">${a.title}</a>
                    </tal:loop>
               </div>
             </div>
          </dd>
        </div>
    </dl>
</div>

<div id="contenttext" class="${(filigrane and 'filigrane-project') or ''} content-text">
  ${structure:text}
</div>

<div id="text-actions">
  <div tal:condition="text_actions" class="text-actions">
        <tal:loop repeat="a text_actions">
          <a tal:attributes="href a.url" class="btn btn-default btn-sm btn-text-action">${a.title}</a>
        </tal:loop>
  </div>
</div>

<div tal:condition="voteactions"  id="voteactions">
    <script >       
        $(document).ready(function(){
             $('#vote-actions-modal').modal('show');
        });
     </script>  
     <!-- Modal -->
     <div class="modal fade" 
          id="vote-actions-modal" 
          role="dialog" 
          aria-labelledby="myModalLabel" 
          aria-hidden="true">
          <div class="modal-dialog">
              <div class="modal-content modal-amendments-vote">
                 <div class="modal-header">
                     <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                     <h4 class="modal-title" id="myModalLabel">Votes</h4>
                  </div>
                  <div class="modal-body">
                      <div id="panel-actions-vote" class="panel-group">
                         <tal:loop repeat="a voteactions">
                             ${structure:a['body']}
                         </tal:loop>
                         <script >       
                              $(document).ready(function(){
                                    $($('#panel-actions-vote').find("a.panel-title").first()).click();
                              });
                          </script> 
                      </div>
                   </div>
              </div>
          </div>
     </div>
</div>
