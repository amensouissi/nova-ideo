<nav class="navbar navbar-entity" role="navigation">
  <div class="container-fluid">
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" >
      <ul class="nav navbar-nav">
        <tal:loop repeat="a text_actions">
          <li><a tal:attributes="href a.url" class="btn btn-sm"><span class="${getattr(a.action,'style_picto','')}" ></span> ${a.title}</a></li>
        </tal:loop>
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <tal:loop repeat="a global_actions">
          <li><a tal:attributes="href a.url" class="btn btn-sm"><span class="${getattr(a.action,'style_picto','')}" ></span> ${a.title}</a></li>
        </tal:loop>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
<div class="media-body content-title-body"  i18n:domain="novaideo">
  <div tal:condition="cant_submit" role="alert" class="alert alert-warning alert-dismissible">
     <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <span  i18n:translate="">Vous avez atteint la limite de participations autorisées. Afin de pouvoir soumettre votre proposition, veuillez démissionner de l'un de </span><a tal:attributes="href request.resource_url(request.virtual_root, '@@seemyparticipations')"  i18n:translate="">vos groupes de travail actuels</a>. 
  </div>
  <h3 tal:condition="proposal.state"><span class="label label-basic pull-right">${proposal.state[0].capitalize()}</span></h3>
  <h2 class="content-title"><img src="${request.static_url('novaideo:static/images/proposal_picto32.png')}"> ${proposal.title}</h2>
  <div class="object-description">
   <small><span  i18n:translate="">(Proposée par </span><a tal:attributes="href request.resource_url(proposal.author, '@@index')">${((proposal.author is current_user) and 'Vous') or getattr(proposal.author, 'title', proposal.author.name)}</a><span  i18n:translate=""> le </span><span tal:replace="layout.to_localized_time(proposal.modified_at, date_only=True)"/><span  i18n:translate=""> à ${proposal.modified_at.hour}:${proposal.modified_at.minute}:${proposal.modified_at.second} </span><span tal:omit-tag="" tal:condition="proposal.originalentity is not None"><span  i18n:translate="">, dupliquée à partir de la proposition </span><a tal:attributes="href request.resource_url(proposal.originalentity, '@@index')">${proposal.originalentity.title}</a></span>)
   </small>
  </div>
</div>

<div class="object-well proposal-well"  i18n:domain="novaideo">
    <dl >
        <dt  i18n:translate="">Abstract</dt>
	<dd class="content-description">${structure:description}</dd>
      <dt tal:condition="proposal.keywords" i18n:translate="">Keywords</dt>
      <dd tal:condition="proposal.keywords">
        <tal:loop repeat="k proposal.keywords">
          <a tal:attributes="href request.resource_url(request.root, '', query={'text':k})">${k}</a>
            <tal:separator condition="not: repeat['k'].end">, </tal:separator> 
        </tal:loop>
      </dd>
        <div tal:omit-tag="" tal:condition="proposal.working_group is not None">
          <dt  i18n:translate="">Working group</dt>
	  <dd>
            <tal:loop repeat="m proposal.working_group.members">
              <a tal:attributes="href request.resource_url(m, '@@index')">${getattr(m, 'title', m.name)}</a>
                <tal:separator condition="not: repeat['m'].end">, </tal:separator> 
           </tal:loop>
          </dd>
          <dd>
            <div id="wg-actions">
               <div tal:condition="wg_actions" class="btn-group wg-actions">
                    <tal:loop repeat="a wg_actions">
                      <a tal:attributes="href a.url" class="btn btn-primary btn-xs btn-wg">${a.title}</a>
                    </tal:loop>
               </div>
             </div>
          </dd>
        </div>
    </dl>
</div>

<div id="contenttext" class="${(filigrane and 'filigrane-project') or ''} content-text">
  ${structure:text}
</div>

<div tal:condition="voteactions"  id="voteactions"  i18n:domain="novaideo">
    <script >       
        $(document).ready(function(){
             $('#vote-actions-modal').modal('show');
        });
     </script>  
     <!-- Modal -->
     <div class="modal fade" 
          id="vote-actions-modal" 
          role="dialog" 
          aria-labelledby="myModalLabel" 
          aria-hidden="true">
          <div class="modal-dialog">
              <div class="modal-content modal-amendments-vote">
                 <div class="modal-header">
                     <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                     <h4 class="modal-title" id="myModalLabel"  i18n:translate="">Votes</h4>
                  </div>
                  <div class="modal-body">
                      <div id="panel-actions-vote" class="panel-group">
                         <tal:loop repeat="a voteactions">
                             ${structure:a['body']}
                         </tal:loop>
                         <script >       
                              $(document).ready(function(){
                                    $($('#panel-actions-vote').find("a.panel-title").first()).click();
                              });
                          </script> 
                      </div>
                   </div>
              </div>
          </div>
     </div>
</div>
