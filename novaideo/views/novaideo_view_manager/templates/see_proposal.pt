<div class="media-body">
<h3 tal:condition="proposal.state"><span class="label label-primary pull-right">${proposal.state[0].capitalize()}</span></h3>
<h3>${proposal.title}</h3>
</div>

<div class="jumbotron well proposal-well">
    <dl >
        <dt>Résumé</dt>
	<dd>${proposal.description}</dd>
      <dt tal:condition="proposal.keywords">Mots clés</dt>
      <dd tal:condition="proposal.keywords">
        <tal:loop repeat="k proposal.keywords">
          <a tal:attributes="href request.resource_url(request.root, '', query={'text':k})">${k}</a>
            <tal:separator condition="not: repeat['k'].end">, </tal:separator> 
        </tal:loop>
      </dd>
        <dt>Dernière modification</dt>
	<dd>
          <span tal:replace="layout.to_localized_time(proposal.modified_at, date_only=True)"/> à ${proposal.created_at.hour}:${proposal.created_at.minute}:${proposal.created_at.second} par <a tal:attributes="href request.resource_url(proposal.author, '@@index')">${((proposal.author is current_user) and 'Vous') or proposal.author.name}</a>
        </dd>
    </dl>
</div>
<div id="proposaltext">
${structure:proposal.text}
</div>

<div id="proposal_actions">
  <div tal:condition="actions" class="btn-group btn-group-justified">
        <tal:loop repeat="a actions">
          <a tal:attributes="href a['url']" class="btn btn-default">${a['title']}</a>
        </tal:loop>
  </div>

</div>

            <div tal:condition="'voteaction' in voteaction"  id="voteaction">
                <div tal:omit-tag="" tal:define="voteaction voteaction['voteaction']">
                 <a id="${voteaction['action_id']}-btn" 
                      class="btn btn-default btn-xs dace-action pull-right"
                      style="max-width: 300px;"
                      href="${voteaction['actionurl']}"   
                      data-toggle="modal"
                      data-actionid ="${voteaction['action_id']}" 
                      data-target="#${voteaction['action_id']}"
                      data-updateurl="${voteaction['actionurl_update']}"
                      data-toreplay="${'toreplay' in voteaction}">
                     <span class="glyphicon glyphicon-pencil"></span> ${voteaction['action'].title}
                   </a>
                   <script >       
                        $(document).ready(function(){
                             $(${'\'#'+voteaction['action_id']+'-btn\''}).click();
                        });
                   </script>  
                   <script>
                        $(document).ready(function(){
                            $(${'\'#'+voteaction['action_id']+'-modal\''}).on('hidden.bs.modal', function (e) {
                               after_execution(${'\"'+voteaction['actionurl_after']+'\"'})
                              })
                        });
                   </script>
                <!-- Modal -->
                   <div class="modal fade" 
                       id="${voteaction['action_id']}-modal" 
                       role="dialog" 
                       aria-labelledby="myModalLabel" 
                       aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                           <div class="modal-header">
                               <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                               <h4 class="modal-title" id="myModalLabel"> ${voteaction['action'].title}</h4>
                           </div>
                           <div class="modal-body">
                              ${structure:voteaction['body']}
                           </div>
                         </div>
                      </div>
                   </div>
                </div>
            </div>
