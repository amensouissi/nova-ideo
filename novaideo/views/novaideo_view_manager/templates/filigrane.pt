<div id="filigrane">PROJET</div>
<script>
   $(document).ready(function(){ 
      var height = $("#proposaltext").height();
      var width = $("#proposaltext").width();
       var font_size =  Math.floor((0.03*width)  + (0.13*height) );
       var left =  Math.floor((0.035*width)  - (0.026*height) );
       var top =  Math.floor((0.0005*width)  - (0.05*height) );
       if (font_size > 190){font_size = 190; top = -120; left = 0}
       $("#filigrane").css('font-size', font_size+'pt');
       $("#filigrane").css('margin-left', left+'%');
       $("#filigrane").css('margin-top', top+'%');
    })
</script>
